    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <bundle.symbolicName>org.usergrid.count-inserter</bundle.symbolicName>
        <bundle.namespace>org.usergrid</bundle.namespace>
