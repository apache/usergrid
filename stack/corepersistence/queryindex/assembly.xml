<assembly>

    <id>elasticsearch-distribution-test</id>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/test/resources/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/test/resources/ES-Distribution-Test-README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>target/${artifactId}-${version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>target/${artifactId}-${version}-tests.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/resources/log4j.properties</source>
            <outputDirectory>/conf</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/resources/es-distribution-test.properties</source>
            <outputDirectory>/conf</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/resources/usergrid-mappings.json</source>
            <outputDirectory>/conf</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.slf4j:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>commons-codec:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>commons-io:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>commons-collection:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>commons-lang3:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.elasticsearch:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>lucene-*:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>com.google.*:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.apache.usergrid:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>com.fasterxml.*:*:jar:*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>log4j:*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>


</assembly>